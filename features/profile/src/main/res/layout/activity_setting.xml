<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/LayoutStyle"
    tools:context=".ui.ui.setting.SettingActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/range_16"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_back_button"
        android:padding="@dimen/range_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cd_back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/PoppinsSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        android:text="@string/text_setting" />

    <TextView
        android:id="@+id/btn_change_leanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/range_24"
        android:layout_marginEnd="@dimen/range_8"
        android:background="@drawable/background_profile_text"
        android:drawablePadding="@dimen/range_16"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="@dimen/range_16"
        android:paddingTop="@dimen/range_16"
        android:paddingBottom="@dimen/range_16"
        android:text="Ubah Pengaturan Bahasa"
        android:textColor="@color/white"
        app:drawableEndCompat="@drawable/ic_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_back"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>